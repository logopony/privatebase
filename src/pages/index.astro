        <radialGradient
          id="gradient1"
          cx="50%"
          cy="50%"
          r="50%"
          fx="50%"
          fy="50%"
        >
          <stop
            offset="0%"
            stop-color="#4ead87"
            stop-opacity="0.3"
          />
          <stop
            offset="100%"
            stop-color="#4ead87"
            stop-opacity="0"
          />
        </radialGradient>
      </defs>

      <!-- Green blob - centered with form -->
      <circle
        cx="400"
        cy="400"
        r="400"
        fill="url(#gradient1)"
      >
        <animate
          attributeName="cx"
          values="400;420;400"
          dur="20s"
          repeatCount="indefinite"
        />
        <animate
          attributeName="cy"
          values="400;380;400"
          dur="23s"
          repeatCount="indefinite"
        />
      </circle>
    </svg>
  </div>
