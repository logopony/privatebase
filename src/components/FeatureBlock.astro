---
interface Props {
  title: string;
  description: string;
  isReversed?: boolean;
}

const { title, description, isReversed = false } = Astro.props;
---

<div class="py-20 first:pt-0 last:pb-0">
  <div class={`flex flex-col gap-16 items-center ${isReversed ? 'md:flex-row-reverse' : 'md:flex-row'}`}>
    <!-- Text Content -->
    <div class="flex-1 max-w-xl">
      <h3 class="text-3xl font-bold mb-6 text-gray-900">
        {title}
      </h3>
      <p class="text-lg leading-relaxed text-gray-600">
        {description}
      </p>
    </div>
    
    <!-- Visual Element -->
    <div class="flex-1">
      <div class="relative">
        <div class="absolute inset-0 bg-primary/20 blur-3xl rounded-full"></div>
        <div class="relative bg-white border border-gray-200 rounded-2xl p-8 shadow-sm">
          <div class="aspect-[4/3] rounded-lg overflow-hidden bg-gray-50 flex items-center justify-center">
            <div class="w-full max-w-xs">
              <div class="bg-gray-100 rounded-lg p-4 mb-4">
                <div class="h-4 w-3/4 bg-gray-200 rounded"></div>
              </div>
              <div class="space-y-3">
                <div class="h-3 w-full bg-gray-100 rounded"></div>
                <div class="h-3 w-5/6 bg-gray-100 rounded"></div>
                <div class="h-3 w-4/6 bg-gray-100 rounded"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>