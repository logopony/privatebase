<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
  <!-- Data Preview Section -->
  <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-200">
    <h2 class="text-xl font-semibold mb-4">Document Content</h2>
    <div class="prose max-w-none">
      <p class="text-gray-600">
        Your document content will appear here after upload.
      </p>
    </div>
  </div>

  <!-- Chat Interface Section -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 flex flex-col h-[600px]">
    <div class="p-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold">Chat with your Data</h2>
    </div>

    <!-- Messages Container -->
    <div class="chat-messages flex-1 overflow-y-auto p-4 space-y-4">
      <!-- Initial AI Message -->
      <div class="flex items-start gap-3">
        <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
        </div>
        <div class="bg-gray-100 rounded-lg p-3 max-w-[80%]">
          <p class="text-gray-800">Hello! Please upload a document to begin the analysis.</p>
        </div>
      </div>
      <!-- Additional messages will be inserted here by JavaScript -->
    </div>

    <!-- Input Area -->
    <div class="p-4 border-t border-gray-200">
      <form class="flex gap-2">
        <input
          type="text"
          placeholder="Ask a question about your document..."
          class="flex-1 px-4 py-2 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-primary/50"
        />
        <button type="submit" class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors">
          Send
        </button>
      </form>
    </div>
  </div>
</div>

<style>
  .chat-messages {
    scrollbar-width: thin;
    scrollbar-color: rgba(156, 163, 175, 0.5) transparent;
  }

  .chat-messages::-webkit-scrollbar {
    width: 6px;
  }

  .chat-messages::-webkit-scrollbar-track {
    background: transparent;
  }

  .chat-messages::-webkit-scrollbar-thumb {
    background-color: rgba(156, 163, 175, 0.5);
    border-radius: 3px;
  }

  .chat-message {
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
