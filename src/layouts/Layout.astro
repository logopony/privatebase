---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Upload and chat with your PDFs using AI" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="relative">
			<!-- Blob Container -->
			<div class="absolute w-full pointer-events-none" style="top: 150px">
				<svg class="w-full h-[1200px]" viewBox="0 0 800 800" preserveAspectRatio="xMidYMid slice">
					<defs>
						<radialGradient id="gradient1" cx="50%" cy="50%" r="50%" fx="50%" fy="50%">
							<stop offset="0%" stop-color="#4ead87" stop-opacity="0.3" />
							<stop offset="100%" stop-color="#4ead87" stop-opacity="0" />
						</radialGradient>
					</defs>
					
					<!-- Green blob - centered with form -->
					<circle cx="400" cy="400" r="300" fill="url(#gradient1)">
						<animate
							attributeName="cx"
							values="400;420;400"
							dur="20s"
							repeatCount="indefinite"
						/>
						<animate
							attributeName="cy"
							values="400;380;400"
							dur="23s"
							repeatCount="indefinite"
						/>
					</circle>
				</svg>
			</div>
			<slot />
		</div>
	</body>
</html>